<Page x:Class="GridView4D.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="450"
	Title="Home" Background="Black">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Content="List" Name="listButton" Click="listButton_Click" Style="{StaticResource buttonStyle}" Margin="200,0,0,0"></Button>
        <Button Grid.Row="0" Content="Create Files" Name="createButton" Click="createButton_Click" Style="{StaticResource buttonStyle}" Margin="0,0,200,0"></Button>

        <Label Grid.Row="1" Content="Open Folder:" Style="{StaticResource labelStyle}"></Label>
        <TextBox Grid.Row="1" Name="browseTextBox" Style="{StaticResource textBoxStyle}"></TextBox>

        <Button Grid.Row="1" Content="Browse" Name="browseButton" Click="browseButton_Click" Style="{StaticResource buttonStyle}"></Button>
    </Grid>
</Page>
