<Window x:Class="GridView4D.ChangeViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChangeViewWindow" Height="450" Width="450" Background="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Select File to Show on top when multiple files collide:" Style="{StaticResource labelStyle}"></Label>
        <ListBox Grid.Row="0" Name="topFileListBox" SelectionMode="Single" Margin="0,30,0,0"></ListBox>
        <ListBox Grid.Row="0" Name="listBoxTopFiles" SelectionMode="Single" Margin="0,30,0,0"></ListBox>

        <Button Grid.Row="1" Content="Done" Name="doneSelectingButton" Click="doneSelectingButton_Click" Style="{StaticResource shortButtonStyle}"></Button>
    </Grid>
</Window>
