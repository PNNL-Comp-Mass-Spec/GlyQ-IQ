<Window x:Class="GridView4D.SaveSizeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SaveSizeWindow" Height="300" Width="300" Background="Black">
    <Grid>
        <Label Content="Choose picture size: " Style="{StaticResource labelStyle}"></Label>
        <ListBox Name="saveSizeListBox" SelectionMode="Single" Margin="0, 30, 0, 50" SelectionChanged="SaveSizeListBox_SelectionChanged">
            <ListBoxItem>Normal (~ 4MB)</ListBoxItem>
            <ListBoxItem>Large (~ 20MB)</ListBoxItem>
        </ListBox>
        <Button Name="doneSaveSize" Content="Done" Style="{StaticResource shortButtonStyle}" Margin="0, 210, 0, 0" Click="doneSaveSize_Click"></Button>
    </Grid>
</Window>
